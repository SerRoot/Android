        android:text="Пусть попугаи сядут"
        app:layout_constraintBottom_toTopOf="@+id/buttonPenguinSpeak"
        app:layout_constraintEnd_toEndOf="@+id/text_home"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="@+id/text_home" />

    <Button
        android:id="@+id/buttonPenguinSpeak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пусть пингвины заговорят"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_home"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="@+id/text_home"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        app:layout_constraintVertical_bias="0.625" />

    <Button
        android:id="@+id/buttonParrotFly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пусть попугаи взлетят"
        app:layout_constraintBottom_toTopOf="@+id/buttonParrotNotFly"
        app:layout_constraintEnd_toEndOf="@+id/text_home"
        app:layout_constraintStart_toStartOf="@+id/text_home"
        app:layout_constraintTop_toBottomOf="@+id/buttonParrotSpeak"
